<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:id="@+id/on"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User id"
                android:id="@+id/u"
                android:layout_below="@id/on"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:id="@+id/a_date"
                android:layout_below="@id/userId"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:layout_marginLeft="20dp"
                android:id="@+id/name"
                android:layout_toRightOf="@id/on"
                />

            <TextView
                android:id="@+id/userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/u"
                android:layout_marginLeft="20dp"
                android:text="userId" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:id="@+id/atten_Date"
                android:layout_toRightOf="@id/on"
                android:layout_below="@id/u"
                android:layout_marginLeft="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in time"
                android:layout_below="@id/atten_Date"
                android:id="@+id/lt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:id="@+id/logintime"
                android:layout_toRightOf="@id/lt"
                android:layout_below="@id/atten_Date"
                android:layout_marginLeft="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout time"
                android:layout_below="@id/lt"
                android:id="@+id/lgt"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:id="@+id/logouttime"
                android:layout_toRightOf="@id/lgt"
                android:layout_below="@id/lt"
                android:layout_marginLeft="20dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_below="@id/lgt"
                android:id="@+id/st"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:id="@+id/status_"
                android:layout_toRightOf="@id/st"
                android:layout_below="@id/lgt"
                android:layout_marginLeft="20dp"

                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>