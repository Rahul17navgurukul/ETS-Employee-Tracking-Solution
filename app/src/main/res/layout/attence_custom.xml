<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="8dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="On Duty time"
                android:id="@+id/on"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Off Duty Time"
                android:id="@+id/off"
                android:layout_below="@id/on"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:id="@+id/a_date"
                android:layout_below="@id/off"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:0"
                android:layout_marginLeft="20dp"
                android:id="@+id/onTime"
                android:layout_toRightOf="@id/on"
                />

            <TextView
                android:id="@+id/offTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/onTime"
                android:layout_toRightOf="@id/off"
                android:layout_marginLeft="20dp"
                android:text="12:0" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:id="@+id/atten_Date"
                android:layout_toRightOf="@id/on"
                android:layout_below="@id/offTime"
                android:layout_marginLeft="20dp"

                />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>